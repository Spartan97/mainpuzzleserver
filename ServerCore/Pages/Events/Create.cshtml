<script>
    // Add "clicked" onclick to submit button of form

    function clicked(e) {
        // should only do this for elements in this form, not all in document
        Array.from(document.getElementsByClassName("input[type=datetime-local]")).forEach(function(field) {
            var date = new Date(field.value);
            date.setTime(date.getTime() + date.getTimezoneOffset()*60*1000);

            year = date.getFullYear();
            month = ("0" + (date.getMonth()+1)).slice(-2);
            day = ("0" + date.getDate()).slice(-2);
            hours = date.getHours();
            mins = date.getMinutes();
            secs = date.getSeconds();

            field.value = year + "-" + month + "-" + day + "T" + hours + ":" + mins + ":" + secs;
        });
    }

    Array.from(document.querySelectorAll("input[type=datetime-local]")).forEach(function(field) {
        var date = new Date(field.value);
        date.setTime(date.getTime() - date.getTimezoneOffset()*60*1000);

        year = date.getFullYear();
        month = ("0" + (date.getMonth()+1)).slice(-2);
        day = ("0" + date.getDate()).slice(-2);
        hours = date.getHours();
        mins = date.getMinutes();
        secs = date.getSeconds();

        field.value = year + "-" + month + "-" + day + "T" + hours + ":" + mins + ":" + secs;
    });
</script>

